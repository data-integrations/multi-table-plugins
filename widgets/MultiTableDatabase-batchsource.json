{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Multiple Database Tables",
  "configuration-groups": [
    {
      "label": "Multi Table Database Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "JDBC Connection String",
          "name": "connectionString"
        },
        {
          "widget-type": "textbox",
          "label": "JDBC Plugin Name",
          "name": "jdbcPluginName"
        },
        {
          "widget-type": "textbox",
          "label": "Database User Name",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Database User Password",
          "name": "password"
        },
        {
          "widget-type": "textbox",
          "label": "Schema Name Pattern",
          "name": "schemaNamePattern"
        },
        {
          "widget-type": "textbox",
          "label": "Table Name Pattern",
          "name": "tableNamePattern"
        },
        {
          "widget-type": "textarea",
          "label": "Where Clause",
          "name": "whereClause"
        },
        {
          "widget-type": "csv",
          "label": "White List of Table Names",
          "name": "whiteList"
        },
        {
          "widget-type": "csv",
          "label": "Black List of Table Names",
          "name": "blackList"
        },
        {
          "widget-type": "textbox",
          "label": "Table Name Field",
          "name": "tableNameField"
        },
        {
          "widget-type": "textbox",
          "label": "Enable Auto Commit",
          "name": "enableAutoCommit"
        },
        {
          "widget-type": "textbox",
          "label": "Splits Per Table",
          "name": "splitsPerTable",
          "widget-attributes": {
            "default": "1"
          }
        },
        {
          "widget-type": "select",
          "label": "Transaction Isolation Level",
          "name": "transactionIsolationLevel",
          "widget-attributes": {
            "values": [
              "TRANSACTION_NONE",
              "TRANSACTION_READ_UNCOMMITTED",
              "TRANSACTION_READ_COMMITTED",
              "TRANSACTION_REPEATABLE_READ",
              "TRANSACTION_SERIALIZABLE"
            ],
            "default": "TRANSACTION_SERIALIZABLE"
          }
        }
      ]
    },
    {
      "label" : "Error Handling",
      "properties" : [
        {
          "name": "errorHandlingMode",
          "label": "Error Handling Mode",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "block",
            "default": "fail-pipeline",
            "options": [
              {
                "id": "skip-table",
                "label": "Skip table"
              },
              {
                "id": "send-to-error-port",
                "label": "Send to error port"
              },
              {
                "id": "fail-pipeline",
                "label": "Fail pipeline"
              }
            ]
          }
        },
        {
          "widget-type": "number",
          "label": "Failed Table Threshold",
          "name": "failedTableThreshold",
          "widget-attributes" : {
            "default": "0",
            "min": "0"
          }
        }
      ]
    }
  ],
  "emit-errors": true,
  "outputs": [ ]
}
